{
  "name": "dms-api",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "tsc-watch --onSuccess \"dotenv -e .env -- node build/index.js\"",
    "build": "npx tsc",
    "start": "npm run env:check && node build/index.js",
    "test": "dotenv -e .env -- npx vitest --threads false",
    "lint": "npx eslint ./src/ --ext .ts",
    "fmt": "npx prettier --write ./src/",
    "check": "npm run fmt && npm run lint",
    "env:check": "node ./src/core/scripts/validate_env.mjs",
    "gen:secret": "node ./src/core/scripts/generate_secret.mjs",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "npx prisma db seed"
  },
  "_moduleAliases": {
    "@": "build"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "quotes": [
        2,
        "double",
        {
          "allowTemplateLiterals": true,
          "avoidEscape": true
        }
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "prettier": {
    "singleQuote": false,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "prisma": {
    "seed": "node build/core/database/seeder/seed.js"
  },
  "env": [
    "FRONT_END_URL",
    "DATABASE_URI",
    "JWT_SECRET",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "FROM_EMAIL"
  ],
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.1",
    "@types/marked": "^4.0.8",
    "@types/node": "^18.14.6",
    "@types/owasp-password-strength-test": "^1.3.0",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "prettier": "^2.8.4",
    "prisma": "^4.11.0",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.282.0",
    "@fastify/cors": "^8.2.0",
    "@fastify/error": "^3.2.0",
    "@fastify/helmet": "^10.1.0",
    "@fastify/rate-limit": "^8.0.0",
    "@fastify/request-context": "^4.2.0",
    "@googlemaps/google-maps-services-js": "^3.3.27",
    "@prisma/client": "^4.11.0",
    "argon2": "^0.30.3",
    "dotenv-cli": "^7.0.0",
    "fastify": "^4.14.1",
    "json-schema-to-ts": "^2.7.2",
    "jsonwebtoken": "^9.0.0",
    "marked": "^4.2.12",
    "module-alias": "^2.2.2",
    "owasp-password-strength-test": "^1.3.0",
    "pino": "^8.11.0",
    "uuid": "^9.0.0"
  }
}
