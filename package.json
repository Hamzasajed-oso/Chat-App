{
  "name": "node-minimal-api",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "tsc-watch --onSuccess \"node build/index.js\"",
    "build": "npx tsc",
    "start": "npm run env:check && node build/index.js",
    "test": "dotenv -e .env -- npx vitest --threads false",
    "lint": "npx eslint . --ext .ts",
    "prepare": "husky install",
    "format": "npx prettier --write 'src/**/*.ts'",
    "check": "npm run format && npm run lint",
    "env:check": "node ./src/vendor/scripts/validate_env.mjs",
    "gen:secret": "node ./src/vendor/scripts/generate_secret.mjs",
    "db:migrate": "npx prisma migrate dev"
  },
  "_moduleAliases": {
    "@": "build"
  },
  "prisma": {
    "seed": "node build/vendor/entities/seeder/seed.js"
  },
  "env": [
    "FRONT_END_URL",
    "DATABASE_URI",
    "JWT_SECRET"
  ],
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.0",
    "@types/marked": "^4.0.8",
    "@types/node": "^17.0.23",
    "@types/owasp-password-strength-test": "^1.3.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "husky": "^8.0.1",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.5.5",
    "vitest": "^0.14.2"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "@fastify/helmet": "^10.1.0",
    "@fastify/rate-limit": "^7.6.0",
    "@fastify/request-context": "^4.2.0",
    "@fastify/websocket": "^7.1.2",
    "@prisma/client": "^4.8.0",
    "argon2": "^0.30.2",
    "dotenv-cli": "^6.0.0",
    "fastify": "^4.10.2",
    "fastify-type-provider-zod": "^1.1.8",
    "jsonwebtoken": "^9.0.0",
    "marked": "^4.2.5",
    "module-alias": "^2.2.2",
    "owasp-password-strength-test": "^1.3.0",
    "prisma": "^4.8.0",
    "uuid": "^9.0.0",
    "ws": "^8.12.0"
  }
}
