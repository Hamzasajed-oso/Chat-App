datasource db {
  provider = "postgresql"
  url      = env("DB_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String? 
  posts Post[]
}

model Post {
  id Int @id @default(autoincrement())
  title String 
  content String
  published Boolean @default(false)
  author User @relation(fields: [author_id], references: [id])
  author_id Int
}